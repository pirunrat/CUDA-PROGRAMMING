{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build OpenCV app (Batch File)",
      "type": "shell",
      "command": "${workspaceFolder}\\build.bat",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        },
        "env": {
          "PATH": "C:\\Users\\user\\Desktop\\opencv\\build\\x64\\vc16\\bin;${env:PATH}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}










